<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root id="login-screen" prefHeight="800.0" prefWidth="1100.0" styleClass="login-screen" stylesheets="@../css/main.css" type="BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="120.0" stylesheets="@../css/main.css" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="50.0">
               <children>
                  <Label id="login-screen-login-button" fx:id="loginButton" styleClass="login-screen-login-button" text="Logga in">
                     <font>
                        <Font name="Javanese Text" size="10.0" />
                     </font>
                  </Label>
                  <Label id="login-screen-new-account-button" fx:id="newAccountButton" styleClass="login-screen-new-account-button" text="Skapa nytt konto">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Label>
                  <Label id="login-screen-user-message-label" fx:id="userMessageLabel" styleClass="login-screen-user-message-label" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets top="50.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <BorderPane BorderPane.alignment="BOTTOM_LEFT">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <right>
            <Label id="login-screen-admin-button" fx:id="adminButton" alignment="BOTTOM_LEFT" styleClass="login-screen-admin-button" text="Personalsida" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
         </right>
         <left>
            <Label id="login-screen-quit-button" fx:id="exitButton" alignment="BOTTOM_LEFT" styleClass="login-screen-quit-button" text="Avsluta program" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </left>
      </BorderPane>
   </bottom>
   <top>
      <VBox alignment="CENTER" prefHeight="94.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="login-screen-welcome-label" prefHeight="75.0" prefWidth="477.0" styleClass="login-screen-welcome-label" text="Hjärtligt välkommen till Stav-bibliotek!" />
         </children>
      </VBox>
   </top>
</fx:root>
