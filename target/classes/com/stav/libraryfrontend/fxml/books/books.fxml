<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<fx:root prefHeight="400.0" prefWidth="800.0" styleClass="a" stylesheets="@../../css/main.css" type="BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <FlowPane fx:id="box" hgap="10.0" vgap="10.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </center>
   <top>
      <HBox alignment="CENTER" focusTraversable="true" prefHeight="50.0" prefWidth="600.0" spacing="10.0" styleClass="books-header" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="languageChoice" focusTraversable="false" prefHeight="25.0" prefWidth="105.0" promptText="Språk" styleClass="books-header-choice" />
            <TextField fx:id="releaseInput" focusTraversable="false" prefHeight="25.0" prefWidth="96.0" styleClass="books-header-released" />
            <ComboBox fx:id="libraryChoice" focusTraversable="false" prefHeight="25.0" prefWidth="105.0" promptText="Bibliotek" styleClass="books-header-choice" />
            <HBox alignment="CENTER" focusTraversable="true" maxHeight="25.0" styleClass="books-header-search-bar">
               <children>
                  <ComboBox fx:id="searchByChoice" prefHeight="27.0" prefWidth="113.0" promptText="Söktyp" />
                  <TextField fx:id="searchInput" prefHeight="25.0" prefWidth="170.0" text="das" />
                  <Label fx:id="searchButton" text="Sök" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </top>
</fx:root>
