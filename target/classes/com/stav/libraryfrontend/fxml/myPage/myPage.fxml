<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<fx:root id="my-page" prefHeight="600.0" prefWidth="800.0" styleClass="my-page" stylesheets="@../../css/main.css" type="BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0" styleClass="my-page-header" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="borrowedBooksButton" styleClass="my-page-header-buttons" text="Lånade böcker" />
            <Label fx:id="reservedBooksButton" styleClass="my-page-header-buttons" text="Reserverade böcker" />
            <Label fx:id="bookedRoomsButton" styleClass="my-page-header-buttons" text="Bokade lokaler" />
         </children>
         <BorderPane.margin>
            <Insets left="25.0" right="25.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <BorderPane fx:id="content" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</fx:root>
